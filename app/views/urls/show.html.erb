<% if notice %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<% end %>
<% if false%>
  <%= form_tag '/urls', remote: true, class: 'form-horizontal' do %>
    <div class="input-group">
      <%= text_field_tag :url, nil, class: 'form-control input-lg', placeholder: 'Paste a link to shorten', autocomplete: 'off' %>
      <span class="input-group-btn">
        <%= submit_tag :Shorten, class: 'btn btn-default btn-lg' %>
      </span>
    </div>
  <% end %>

  <div class="alert alert-success hidden" role="alert">
    Shorten URL: <a href="#" class="alert-link" target="_BLANK"></a>
    <button class="btn btn-default copy_link btn-xs">Copy</button>
  </div>
  <br>
<% end %>

<div class="row">
  <div class="col s12 m4">
    <ul class="collection with-header">
      <li class="collection-header"><h4>Urls</h4></li>
      <% @urls.each do |url| %>
        <a href=<%= url_path(url) %> class="collection-item">
          <span class="badge"><%= url.hit_count %></span>
          <%= url.shorten_url.link(request.base_url).sub('http://','') %>
        </a>
      <% end %>
    </ul>
  </div>

  <div class="col s12 m8">
    <%= @url.hit_count %>
  </div>
</div>