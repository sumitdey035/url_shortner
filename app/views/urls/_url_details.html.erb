<div class="inner">
  <div class="row">
    <h6 class="heading"><%= @url.title.truncate(75, separator: ' ') %></h6>
    <p><small><%= link_to @url.url, @url.url %></small></p>
    <p><small><%= link_to @url.shorten_url.link('http://localhost:3000'), @url.url %></small></p>
  </div>
  <hr />
  <p>
    <span class="right">Last hit: <%= @url.shorten_url.hits.first.created_at %></span>
    <span>Created: <%= @url.created_at %></span>
  </p>
  <p><%= @url.shorten_url.hits_count %> Total hit</p>
</div>